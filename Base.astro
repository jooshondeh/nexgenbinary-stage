---
const { title = "NexGen Binary", description = "Reliable IT for Dental Practices Across Virginia" } = Astro.props;
import "../styles/custom.css";
import "../styles/nav-stability-v17.css";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0b2742" />

    <link rel="icon" type="image/png" href="/favicon-32x32.png?v=32" />
    <link rel="shortcut icon" href="/favicon.ico?v=32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png?v=32" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Plus+Jakarta+Sans:wght@600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <slot />
    <script>
      (function() {
        try { history.scrollRestoration = "manual"; } catch {}
        window.addEventListener("load", function() {
          window.scrollTo(0, 0);
          const href = "/favicon-32x32.png?v=32";
          document.querySelectorAll("link[rel*='icon']").forEach((n) => n.remove());
          const icon = document.createElement("link");
          icon.rel = "icon"; icon.type = "image/png"; icon.href = href; document.head.appendChild(icon);
          const shortcut = document.createElement("link");
          shortcut.rel = "shortcut icon"; shortcut.href = "/favicon.ico?v=32"; document.head.appendChild(shortcut);
        });
      })();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
