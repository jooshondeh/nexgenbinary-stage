---
const { site } = Astro.props;
import IconBadge from "./IconBadge.astro";
const c = site.contact ?? {};
const formEndpoint = c.formEndpoint ?? "";
---
<section id="contact" class="nb-anchor-offset nb-section">
  <div class="container">
    <div class="row g-4 align-items-start">
      <div class="col-lg-5">
        <h2 class="section-title fw-bold">{c.title}</h2>
        <p class="text-secondary mt-3">{c.lead}</p>
        <div class="p-4 nb-card mt-3">
          <div class="nb-contact-item mb-3"><div class="nb-icon-wrap"><IconBadge name="phone" /></div><div><div class="small text-secondary">{c.phoneLabel}</div><a href={c.phoneHref}>{c.phoneText}</a></div></div>
          <div class="nb-contact-item mb-3"><div class="nb-icon-wrap"><IconBadge name="mail" /></div><div><div class="small text-secondary">{c.emailLabel}</div><a href={c.emailHref}>{c.emailText}</a></div></div>
          <div class="nb-contact-item"><div class="nb-icon-wrap"><IconBadge name="clock" /></div><div><div class="small text-secondary">Hours of operation</div><div class="fw-semibold">Monday–Friday, 9:00 AM – 5:00 PM</div></div></div>
          <a class="btn nb-btn-primary mt-3" href={site.bookings?.url} target="_blank" rel="noopener"><span class="d-inline-flex align-items-center gap-2"><IconBadge name="calendar" />Book a consult</span></a>
        </div>
      </div>
      <div class="col-lg-7">
        <div class="p-4 nb-card">
          <h3 class="h5 fw-bold mb-3">Send a message</h3>
          <form id="contactForm" class="row g-3">
            <input type="hidden" id="contactEndpoint" value={formEndpoint} />
            <div class="col-md-6"><label class="form-label">Name</label><input class="form-control" name="name" required /></div>
            <div class="col-md-6"><label class="form-label">Email</label><input class="form-control" name="email" type="email" required /></div>
            <div class="col-md-6"><label class="form-label">Phone</label><input class="form-control" name="phone" type="tel" /></div>
            <div class="col-md-6"><label class="form-label">Practice / Organization</label><input class="form-control" name="org" /></div>
            <div class="col-12"><label class="form-label">Message</label><textarea class="form-control" name="message" rows="5" required /></div>
            <div class="col-12 d-flex gap-2 flex-wrap align-items-center">
              <button class="btn nb-btn-primary" type="submit"><span class="d-inline-flex align-items-center gap-2"><IconBadge name="send" />Send message</span></button>
              <a class="btn btn-outline-secondary rounded-pill" href={c.emailHref}>Email using my mail app</a>
              <span id="contactStatus" class="small text-secondary"></span>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
    const form=document.getElementById('contactForm'); const statusEl=document.getElementById('contactStatus'); const endpoint=(document.getElementById('contactEndpoint')?.value||'').trim();
    form?.addEventListener('submit', async (e)=>{ e.preventDefault();
      if(!endpoint || endpoint.includes('example.com') || endpoint.includes('PASTE-POWER-AUTOMATE')){ alert('Contact form is not connected yet. Please use the email button for now.'); return; }
      const fd=new FormData(form); const payload={name:fd.get('name'),email:fd.get('email'),phone:fd.get('phone'),organization:fd.get('org'),message:fd.get('message'),submittedAt:new Date().toISOString(),source:'nexgenbinary.com'};
      try { statusEl.textContent='Sending…'; const r=await fetch(endpoint,{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify(payload)}); if(!r.ok) throw new Error(); form.reset(); statusEl.textContent='Sent'; alert('Thank you. Your message was sent successfully. Someone will reach out soon.');}
      catch { statusEl.textContent='Not sent'; alert('Unable to send automatically right now. Please use the email button.'); }
    });
  </script>
</section>
