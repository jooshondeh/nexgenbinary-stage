---
const navItems = [
  { href: '#home', label: 'Home' },
  { href: '#services', label: 'Services' },
  { href: '#pricing', label: 'Pricing' },
  { href: '#who-we-serve', label: 'Who We Serve' },
  { href: '#about', label: 'About' },
  { href: '#contact', label: 'Contact' },
];
---
<nav class="navbar navbar-expand-lg sticky-top nb-navbar" aria-label="Primary navigation">
  <div class="container nb-navbar-inner">
    <a class="nb-brand" href="#home" aria-label="NexGen Binary home">
      <img src="/Company_logo.png?v=32" alt="NexGen Binary logo" class="nb-brand-logo" />
      <div class="nb-brand-stack">
        <span class="nb-brand-text">NexGen Binary</span>
        <span class="nb-brand-slogan">Precision Built. People First. Always.</span>
      </div>
    </a>

    <button class="navbar-toggler nb-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nbNavbarMenu" aria-controls="nbNavbarMenu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="nbNavbarMenu">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center nb-nav-list">
        {navItems.map((item) => (
          <li class="nav-item">
            <a class="nav-link nb-nav-link" href={item.href}>{item.label}</a>
          </li>
        ))}
        <li class="nav-item ms-lg-2">
          <a class="btn nb-btn-primary nb-nav-call" href="#contact">
            <span class="nb-btn-inlineicon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><path d="M22 16.92v3a2 2 0 0 1-2.18 2A19.86 19.86 0 0 1 3.08 5.18 2 2 0 0 1 5.06 3h3a2 2 0 0 1 2 1.72c.12.9.33 1.78.63 2.62a2 2 0 0 1-.45 2.11L9 10.69a16 16 0 0 0 6.31 6.31l1.24-1.24a2 2 0 0 1 2.11-.45c.84.3 1.72.51 2.62.63A2 2 0 0 1 22 16.92z" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </span>
            <span>804-000-0000</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  (() => {
    const links = Array.from(document.querySelectorAll('.nb-nav-link'));
    const sections = links.map((l) => document.querySelector(l.getAttribute('href'))).filter(Boolean);
    const menu = document.getElementById('nbNavbarMenu');
    const bsCollapse = menu && window.bootstrap ? new window.bootstrap.Collapse(menu, { toggle: false }) : null;

    links.forEach((link) => {
      link.addEventListener('click', () => {
        if (window.innerWidth < 992 && bsCollapse && menu.classList.contains('show')) bsCollapse.hide();
      });
    });

    const setActive = () => {
      const y = window.scrollY + 120;
      let currentId = '#home';
      for (const sec of sections) {
        if (y >= sec.offsetTop) currentId = `#${sec.id}`;
      }
      links.forEach((link) => {
        const active = link.getAttribute('href') === currentId;
        link.classList.toggle('active', active);
      });
    };

    window.addEventListener('scroll', setActive, { passive: true });
    window.addEventListener('load', setActive);
    setActive();
  })();
</script>
