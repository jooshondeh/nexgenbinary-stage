---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Contact | NexGen Binary" active="contact" includeFaqSchema=false>

<main class="container page"><div class="grid2">
<section class="panel"><h1>Contact</h1><p class="muted">Richmond-area service.</p>
<div class="inline-row">
<a href="/consultation#book" class="btn primary"><i class="fa-solid fa-calendar-check"></i> Book a Consult</a>
<a href="https://www.google.com/maps?cid=REPLACE_WITH_YOUR_GBP_ID" class="btn ghost" target="_blank"><i class="fa-brands fa-google"></i> Google Business Profile</a>
</div></section>
<section class="panel">
<form class="form message-form" action="https://formspree.io/f/REPLACE_CONTACT_FORM_ID" method="post" novalidate>
<label>Name *<input type="text" name="name" required></label>
<label>Email *<input type="email" name="email" required></label>
<label>Message *<textarea name="message" rows="6" required></textarea></label>
<div class="form-status"></div>
<button type="submit" class="btn primary"><i class="fa-solid fa-paper-plane"></i> Send Message</button>
</form>
</section></div></main>

</Layout>
