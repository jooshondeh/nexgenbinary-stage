---
import Layout from "../layouts/Layout.astro";
const BASE = import.meta.env.BASE_URL;
---
<Layout title="Contact | NexGen Binary" active="contact">

<main class="container page">
  <div class="grid2">
    <section class="panel"><h1>Contact</h1><p class="muted">(804) 000-0000</p></section>
    <section class="panel">
      <form class="form">
        <label>Name *<input type="text" required /></label>
        <label>Email *<input type="email" required /></label>
        <label>Message *<textarea rows="5" required></textarea></label>
        <button type="submit" class="btn primary"><i class="fa-solid fa-paper-plane"></i> Send Message</button>
      </form>
    </section>
  </div>
</main>

</Layout>
