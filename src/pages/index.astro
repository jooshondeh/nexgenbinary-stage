---
import Layout from "../layouts/Layout.astro";
const BASE = import.meta.env.BASE_URL;
const navHref = (p) => `${BASE}${p}`;
---
<Layout title="NexGen Binary | Home" active="home">
<main>
  <section class="hero">
    <div class="container hero-grid">
      <div>
        <span class="eyebrow"><i class="fa-solid fa-location-dot"></i> Virginia-Based IT Support</span>
        <h1>Managed IT for Dental &amp; Healthcare Offices</h1>
        <p class="lead">Responsive, security-focused support for Microsoft 365, devices, networking, and daily office operations.</p>

        <div class="inline-row">
          <a href={navHref('consultation#book')} class="btn primary">
            <i class="fa-solid fa-calendar-check"></i> Book a Consult
          </a>
          <a href={navHref('contact')} class="btn ghost">
            <i class="fa-solid fa-paper-plane"></i> Send Message
          </a>
        </div>

        <div class="pill-row">
          <span><i class="fa-solid fa-network-wired"></i> Fully Managed IT</span>
          <span><i class="fa-solid fa-map-location-dot"></i> Local &amp; Responsive</span>
          <span><i class="fa-brands fa-microsoft"></i> Microsoft 365</span>
        </div>
      </div>

      <aside class="panel">
        <h3>Quick Start</h3>
        <ul class="check-list">
          <li>Book a consultation</li>
          <li>Share your needs</li>
          <li>Review service options</li>
          <li>Plan next steps</li>
        </ul>
      </aside>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section-head">
        <h2>Service Plans</h2>
        <p class="muted">Two plan bubbles with quick details and expandable sections.</p>
      </div>

      <div class="grid2">
        <article class="panel plan-card">
          <div class="plan-top">
            <div class="plan-title-wrap">
              <div class="icon-box"><i class="fa-solid fa-network-wired icon"></i></div>
              <div>
                <h3>Fully Managed IT</h3>
                <div class="small muted">Complete outsourced support</div>
              </div>
            </div>
            <button class="toggle-btn" type="button" aria-expanded="true">
              <i class="fa-solid fa-circle-info"></i> More Info
            </button>
          </div>

          <div class="toggle-content open">
            <ul class="bullet-list">
              <li>Monitoring &amp; alerting</li>
              <li>Helpdesk &amp; onsite support</li>
              <li>Patch management</li>
              <li>Microsoft 365 administration</li>
            </ul>
            <div class="plan-actions">
              <a href={navHref('consultation#book')} class="btn primary"><i class="fa-solid fa-calendar-check"></i> Book a Consult</a>
            </div>
          </div>
        </article>

        <article class="panel plan-card">
          <div class="plan-top">
            <div class="plan-title-wrap">
              <div class="icon-box"><i class="fa-solid fa-people-group icon"></i></div>
              <div>
                <h3>Co-Managed IT</h3>
                <div class="small muted">Partner with internal IT</div>
              </div>
            </div>
            <button class="toggle-btn" type="button" aria-expanded="true">
              <i class="fa-solid fa-circle-info"></i> More Info
            </button>
          </div>

          <div class="toggle-content open">
            <ul class="bullet-list">
              <li>Escalation support</li>
              <li>Project assistance</li>
              <li>Vendor coordination</li>
              <li>Overflow coverage</li>
            </ul>
            <div class="plan-actions">
              <a href={navHref('consultation#book')} class="btn primary"><i class="fa-solid fa-calendar-check"></i> Book a Consult</a>
            </div>
          </div>
        </article>
      </div>
    </div>
  </section>
</main>

</Layout>
