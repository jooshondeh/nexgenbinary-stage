---
import Base from "../layouts/Base.astro";
import NavBar from "../components/NavBar.astro";
import Hero from "../components/Hero.astro";
import WhyUs from "../components/WhyUs.astro";
import Services from "../components/Services.astro";
import Pricing from "../components/Pricing.astro";
import WhoWeServe from "../components/WhoWeServe.astro";
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import site from "../content/site.json";
---
<Base title={`${site.brand?.name} | Dental IT Services in Virginia`} description="Reliable IT, security, and support services for dental practices across Virginia.">
  <NavBar site={site} />
  <Hero site={site} />
  <WhyUs site={site} />
  <Services site={site} />
  <Pricing site={site} />
  <WhoWeServe site={site} />
  <About site={site} />
  <Contact site={site} />
  <Footer site={site} />
</Base>
