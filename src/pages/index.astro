---
import Layout from "../layouts/Layout.astro";
const BASE = import.meta.env.BASE_URL;
---
<Layout title="NexGen Binary | Home" active="home">

<main>
  <section class="hero">
    <div class="container hero-grid">
      <div>
        <span class="eyebrow">Virginia-Based IT Support</span>
        <h1>Managed IT for Dental & Healthcare Offices</h1>
        <p class="lead">Responsive, security-focused support for Microsoft 365, devices, networking, and daily office operations.</p>
        <div class="inline-row">
          <a href={`${BASE}consultation#book`} class="btn primary"><i class="fa-solid fa-calendar-check"></i> Book a Consult</a>
          <a href={`${BASE}contact`} class="btn ghost"><i class="fa-solid fa-paper-plane"></i> Send Message</a>
        </div>
        <div class="pill-row">
          <span><i class="fa-solid fa-network-wired"></i> Fully Managed IT</span>
          <span><i class="fa-solid fa-map-location-dot"></i> Local & Responsive</span>
        </div>
      </div>
      <aside class="panel">
        <h3>Quick Start</h3>
        <ul class="check-list">
          <li>Book a consultation</li><li>Share your needs</li><li>Review service options</li><li>Plan next steps</li>
        </ul>
      </aside>
    </div>
  </section>
  <section class="container">
    <div class="section-head"><h2>Service Plans</h2></div>
    <div class="grid2">
      <article class="panel plan-card">
        <div class="plan-head">
          <div class="plan-title"><div class="icon-box"><i class="fa-solid fa-network-wired icon"></i></div><div><h3>Fully Managed IT</h3><p class="small muted">Complete outsourced support</p></div></div>
          <button class="toggle-btn" type="button"><i class="fa-solid fa-circle-info"></i> More Info</button>
        </div>
        <div class="toggle-content open"><ul class="bullet-list"><li>Monitoring</li><li>Helpdesk</li><li>Patching</li><li>M365 admin</li></ul></div>
      </article>
      <article class="panel plan-card">
        <div class="plan-head">
          <div class="plan-title"><div class="icon-box"><i class="fa-solid fa-people-group icon"></i></div><div><h3>Co-Managed IT</h3><p class="small muted">Partner with internal IT</p></div></div>
          <button class="toggle-btn" type="button"><i class="fa-solid fa-circle-info"></i> More Info</button>
        </div>
        <div class="toggle-content open"><ul class="bullet-list"><li>Escalations</li><li>Projects</li><li>Vendor coordination</li><li>Coverage</li></ul></div>
      </article>
    </div>
  </section>
</main>

</Layout>
