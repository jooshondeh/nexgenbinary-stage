---
import Layout from "../layouts/Layout.astro";
const BASE = import.meta.env.BASE_URL;
const navHref = (p) => `${BASE}${p}`;
---
<Layout title="Services | NexGen Binary" active="services">
<main class="page">
  <div class="container">
    <h1>Services</h1>
    <div class="grid3">
      <div class="card">
        <div class="feature-item">
          <div class="icon-box"><i class="fa-solid fa-network-wired icon"></i></div>
          <div><h3>Fully Managed IT</h3><p class="muted small">Complete day-to-day support for your office.</p></div>
        </div>
      </div>
      <div class="card">
        <div class="feature-item">
          <div class="icon-box"><i class="fa-solid fa-map-location-dot icon"></i></div>
          <div><h3>Local &amp; Responsive</h3><p class="muted small">Virginia-based support with fast response times.</p></div>
        </div>
      </div>
      <div class="card">
        <div class="feature-item">
          <div class="icon-box"><i class="fa-solid fa-shield-halved icon"></i></div>
          <div><h3>Security Support</h3><p class="muted small">Patch, endpoint, and M365 security best practices.</p></div>
        </div>
      </div>
    </div>
  </div>
</main>

</Layout>
