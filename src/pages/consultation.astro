---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Consultation | NexGen Binary" active="consultation" includeFaqSchema=false>

<main class="container page"><div class="grid2">
<section class="panel"><h1>Book a Consultation</h1><p class="notice">Please do not include patient data or sensitive information in this form.</p></section>
<section class="panel" id="book">
<form class="form consult-form" action="https://formspree.io/f/REPLACE_CONSULT_FORM_ID" method="post" novalidate>
<label>Full Name *<input type="text" name="name" required></label>
<label>Practice / Company *<input type="text" name="company" required></label>
<label>Email *<input type="email" name="email" required></label>
<label>Phone<input type="tel" name="phone"></label>
<label>How can we help? *<textarea name="message" rows="5" required></textarea></label>
<div class="form-status"></div>
<button type="submit" class="btn primary"><i class="fa-solid fa-calendar-check"></i> Submit Consultation Request</button>
</form>
</section></div></main>

</Layout>
