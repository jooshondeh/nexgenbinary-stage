---
const { site } = Astro.props;
const footer = site.footer ?? {};
const contact = site.contact ?? {};
const googleBusinessUrl = contact.googleBusinessUrl ?? "";
const googleBusinessLabel = contact.googleBusinessLabel ?? "Find us on Google";
---
<footer class="nb-footer">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
      <div class="nb-footer-left d-flex align-items-center flex-wrap gap-2">
        <small>{footer.copyright}</small>
        {googleBusinessUrl && (
          <>
            <span class="nb-footer-sep" aria-hidden="true">â€¢</span>
            <a
              class="nb-footer-google-link"
              href={googleBusinessUrl}
              target="_blank"
              rel="noopener noreferrer"
            >
              {googleBusinessLabel}
            </a>
          </>
        )}
      </div>

      <a class="nb-footer-toplink" href="#top">{footer.backToTopLabel}</a>
    </div>
  </div>
</footer>
