---
const { site } = Astro.props;
import IconBadge from "./IconBadge.astro";
const a = site.about ?? {};
---
<section id="about" class="nb-anchor-offset nb-section nb-about-section" style="background:#f8fafc">
  <div class="container">
    <div class="row g-4">
      <div class="col-lg-6 d-flex flex-column gap-3">
        <h2 class="section-title fw-bold mb-0">{a.title ?? "About"}</h2>

        <div class="nb-card nb-pop bg-white nb-about-card nb-about-story-card">
          <div class="nb-about-head">
            <div class="nb-icon-wrap nb-about-icon"><IconBadge name="people" /></div>
            <div class="nb-about-head-title">{a.whoWeAreTitle ?? "Who We Are"}</div>
          </div>
          <p class="text-secondary mb-0">{a.whoWeAre ?? ""}</p>
        </div>

        <div class="nb-card nb-pop bg-white nb-about-card nb-about-lead-card">
          <div class="nb-about-head">
            <div class="nb-icon-wrap nb-about-icon"><IconBadge name="tools" /></div>
            <div class="nb-about-head-title">{a.leadershipTitle ?? "Leadership & Team Experience"}</div>
          </div>
          <p class="text-secondary mb-0">{a.leadership ?? ""}</p>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="nb-card nb-pop bg-white nb-about-card nb-about-security-card">
          <div class="nb-about-head">
            <div class="nb-icon-wrap nb-about-icon"><IconBadge name="shield" /></div>
            <div class="nb-about-head-title">{a.securityTitle ?? "Security & Compliance by Design"}</div>
          </div>

          <ul class="nb-about-bullets">
            {(a.securityBullets ?? []).map((x) => (<li>{x}</li>))}
          </ul>

          <div class="nb-about-callout">
            <strong>{a.licensed ?? "Licensed and insured."}</strong>
            <span> {a.licensedBody ?? "We deliver with documentation, accountability, and clear communication from day one."}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
