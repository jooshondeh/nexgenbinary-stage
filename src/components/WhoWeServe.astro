---
const { site } = Astro.props;
import IconBadge from "./IconBadge.astro";
const w = site.whoWeServe ?? {};
---
<section id="who-we-serve" class="nb-anchor-offset nb-section" style="background:#ffffff">
  <div class="container">
    <div class="row g-4">
      <div class="col-lg-6">
        <h2 class="section-title fw-bold">{w.title ?? "Who We Serve â€” Dental Practices"}</h2>
        <p class="text-secondary mt-3">{w.lead ?? ""}</p>
        <div class="p-4 nb-card nb-pop mt-4">
          <div class="d-flex align-items-start gap-2">
            <div class="nb-icon-wrap" style="width:38px;height:38px;flex:0 0 38px"><IconBadge name="chart" /></div>
            <div>
              <div class="fw-semibold mb-1">{w.serviceArea ?? ""}</div>
              <div class="text-secondary small">Remote-friendly support with on-site capability when needed.</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="row g-3">
          <div class="col-12">
            <div class="p-4 nb-card nb-pop h-100">
              <div class="d-flex align-items-center gap-2 mb-2">
                <div class="nb-icon-wrap" style="width:38px;height:38px;flex:0 0 38px"><IconBadge name="shield" /></div>
                <div class="fw-semibold">{w.challengesTitle ?? "We Understand Dental IT Challenges"}</div>
              </div>
              <ul class="mb-0">{(w.challenges ?? []).map((x) => (<li class="mb-2">{x}</li>))}</ul>
            </div>
          </div>
          <div class="col-12">
            <div class="p-4 nb-card nb-pop h-100">
              <div class="d-flex align-items-center gap-2 mb-2">
                <div class="nb-icon-wrap" style="width:38px;height:38px;flex:0 0 38px"><IconBadge name="people" /></div>
                <div class="fw-semibold">{w.approachTitle ?? "Our Approach"}</div>
              </div>
              <ul class="mb-0">{(w.approach ?? []).map((x) => (<li class="mb-2">{x}</li>))}</ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
