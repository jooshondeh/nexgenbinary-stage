---
const { site } = Astro.props;
import IconBadge from "./IconBadge.astro";
const w = site.whoWeServe ?? {};
---
<section id="who-we-serve" class="nb-anchor-offset nb-section" style="background:#ffffff">
  <div class="container">
    <div class="nb-who-header mb-4">
      <h2 class="section-title fw-bold mb-1">{w.title ?? "Who We Serve"}</h2>
      <div class="nb-who-subtitle fw-semibold">{w.subtitle ?? "Dental Practices Across Virginia"}</div>
      <p class="text-secondary mt-3 mb-0 nb-who-lead">
        {w.lead ?? ""}
      </p>
    </div>

    <div class="row g-4 nb-who-main-row">
      <div class="col-lg-6">
        <div class="nb-card nb-pop nb-who-card h-100">
          <div class="nb-who-head">
            <div class="nb-icon-wrap nb-who-icon"><IconBadge name="shield" /></div>
            <div class="nb-who-head-title">{w.challengesTitle ?? "We Understand Dental IT Challenges"}</div>
          </div>
          <ul class="nb-who-bullets mb-0">
            {(w.challenges ?? []).map((x) => (<li>{x}</li>))}
          </ul>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="nb-card nb-pop nb-who-card h-100">
          <div class="nb-who-head">
            <div class="nb-icon-wrap nb-who-icon"><IconBadge name="people" /></div>
            <div class="nb-who-head-title">{w.approachTitle ?? "Our Approach"}</div>
          </div>
          <ul class="nb-who-bullets mb-0">
            {(w.approach ?? []).map((x) => (<li>{x}</li>))}
          </ul>
        </div>
      </div>
    </div>

    <div class="mt-3">
      <div class="nb-card nb-pop nb-who-service-strip">
        <div class="nb-icon-wrap nb-who-icon nb-who-service-icon"><IconBadge name="pin" /></div>
        <div class="nb-who-service-copy">
          <div class="nb-who-service-title fw-semibold">{w.serviceArea ?? ""}</div>
          <div class="text-secondary small">{w.serviceAreaBody ?? "Remote-friendly support with on-site capability when needed."}</div>
        </div>
      </div>
    </div>
  </div>
</section>
