---
const { site } = Astro.props;
const p = site.pricing ?? {};
const rows = p.rows ?? [];
const basicName = p.plans?.[0]?.name ?? "Basic Care Plan";
const premiumName = p.plans?.[1]?.name ?? "Premium Care + Extended Warranty";
---
<section id="pricing" class="nb-anchor-offset nb-section nb-section-alt">
  <div class="container">
    <div class="text-center mb-4"><h2 class="nb-section-title">{p.title}</h2><p class="nb-section-subtitle mx-auto">{p.subtitle}</p></div>
    <div class="row g-3 mb-4">
      <div class="col-md-6"><div class="nb-plan-card nb-pop"><h3 class="h5 fw-bold mb-1">{basicName}</h3><div class="nb-muted">{p.plans?.[0]?.monthly}</div><a class="btn nb-btn-primary btn-sm mt-3" href="#contact">Request more information</a></div></div>
      <div class="col-md-6"><div class="nb-plan-card nb-pop"><h3 class="h5 fw-bold mb-1">{premiumName}</h3><div class="nb-muted">{p.plans?.[1]?.monthly}</div><a class="btn nb-btn-primary btn-sm mt-3" href="#contact">Request more information</a></div></div>
    </div>
    <div class="d-none d-lg-block nb-table-wrap"><table class="table nb-table align-middle"><thead><tr><th>Feature</th><th>{basicName}</th><th>{premiumName}</th></tr></thead><tbody>{rows.map((r)=><tr><td><strong>{r.feature}</strong></td><td>{String(r.basic).startsWith("✔") ? <span class="nb-check">{r.basic}</span> : r.basic}</td><td>{String(r.premium).startsWith("✔") ? <span class="nb-check">{r.premium}</span> : r.premium}</td></tr>)}</tbody></table></div>
  </div>
</section>
