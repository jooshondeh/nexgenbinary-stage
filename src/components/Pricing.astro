---
const { site } = Astro.props;
const p = site.pricing ?? {};
const rows = p.rows ?? [];
const basicName = p.plans?.[0]?.name ?? "Basic Care Plan";
const premiumName = p.plans?.[1]?.name ?? "Premium Care + Extended Warranty";
---
<section id="pricing" class="nb-anchor-offset nb-section" style="background:#f8fafc">
  <div class="container">
    <div class="text-center mb-4">
      <h2 class="section-title fw-bold">{p.title ?? "Service Plan Comparison"}</h2>
      <p class="text-secondary">{p.subtitle ?? ""}</p>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6"><div class="p-4 nb-card nb-pop h-100"><h3 class="h5 fw-bold">{basicName}</h3><div class="text-secondary">{p.plans?.[0]?.monthly ?? ""}</div><a class="btn nb-btn-primary btn-sm mt-3" href="#contact">Request more information</a></div></div>
      <div class="col-md-6"><div class="p-4 nb-card nb-pop h-100"><h3 class="h5 fw-bold">{premiumName}</h3><div class="text-secondary">{p.plans?.[1]?.monthly ?? ""}</div><a class="btn nb-btn-primary btn-sm mt-3" href="#contact">Request more information</a></div></div>
    </div>
    <div class="nb-table-wrap"><table class="table nb-table align-middle"><thead><tr><th>Feature</th><th>{basicName}</th><th>{premiumName}</th></tr></thead><tbody>{rows.map((r)=><tr><td><strong>{r.feature}</strong></td><td>{r.basic}</td><td>{r.premium}</td></tr>)}</tbody></table></div>
  </div>
</section>
