---
const { site } = Astro.props;
import IconBadge from "./IconBadge.astro";
const s = site.services ?? {};
const iconMap = ["monitor","shield","cloud","wifi","phone","camera","tools","people"];
---
<section id="services" class="nb-anchor-offset nb-section">
  <div class="container">
    <h2 class="nb-section-title">{s.title ?? "Services"}</h2>
    <p class="nb-section-subtitle">{s.subtitle ?? ""}</p>
    <div class="row g-3 mt-1">
      {(s.items ?? []).map((item, i) => <div class="col-md-6"><div class="nb-card nb-pop h-100"><div class="nb-icon-row"><div class="nb-icon-wrap"><IconBadge name={iconMap[i % iconMap.length]} /></div><div><div class="fw-semibold">{item.title ?? item.name ?? "Service"}</div><div class="small text-secondary">{item.text ?? item.description ?? ""}</div></div></div></div></div>)}
    </div>
  </div>
</section>
