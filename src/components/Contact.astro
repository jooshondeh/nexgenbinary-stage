---
const { site } = Astro.props;
import IconBadge from "./IconBadge.astro";
const c = site.contact ?? {};
const formEndpoint = c.formEndpoint ?? "";
---
<section id="contact" class="nb-anchor-offset nb-section">
  <div class="container">
    <div class="row g-4 align-items-start">
      <div class="col-lg-5">
        <h2 class="nb-section-title">{c.title}</h2>
        <p class="nb-section-subtitle mt-3">{c.lead}</p>
        <div class="nb-card mt-4">
          <div class="nb-contact-list">
            <div class="nb-contact-item"><div class="nb-icon-wrap"><IconBadge name="phone" /></div><div><div class="small text-secondary">{c.phoneLabel}</div><a href={c.phoneHref}>{c.phoneText}</a></div></div>
            <div class="nb-contact-item"><div class="nb-icon-wrap"><IconBadge name="mail" /></div><div><div class="small text-secondary">{c.emailLabel}</div><a href={c.emailHref}>{c.emailText}</a></div></div>
            <div class="nb-contact-item"><div class="nb-icon-wrap"><IconBadge name="clock" /></div><div><div class="small text-secondary">Hours of operation</div><div class="fw-semibold">Monday–Friday, 9:00 AM – 5:00 PM</div></div></div>
          </div>
          <div class="mt-4">
            <a class="btn nb-btn-primary nb-btn-inlineicon" href={site.bookings?.url} target="_blank" rel="noopener">
              <span class="nb-btn-icon"><IconBadge name="calendar" className="nb-icon-sm" /></span>
              <span>Book a consultation</span>
            </a>
          </div>
        </div>
      </div>
      <div class="col-lg-7">
        <div class="nb-card">
          <h3 class="h5 fw-bold mb-3">Send a message</h3>
          <form id="contactForm" class="row g-3">
            <input type="hidden" id="contactEndpoint" value={formEndpoint} />
            <div class="col-md-6"><label class="form-label">Name</label><input class="form-control" name="name" required /></div>
            <div class="col-md-6"><label class="form-label">Email</label><input class="form-control" name="email" type="email" required /></div>
            <div class="col-md-6"><label class="form-label">Phone</label><input class="form-control" name="phone" type="tel" /></div>
            <div class="col-md-6"><label class="form-label">Practice / Organization</label><input class="form-control" name="org" /></div>
            <div class="col-12"><label class="form-label">Message</label><textarea class="form-control" name="message" rows="6" required></textarea></div>
            <div class="col-12 d-flex flex-wrap gap-2 align-items-center">
              <button class="btn nb-btn-primary nb-btn-inlineicon" type="submit">
                <span class="nb-btn-icon"><IconBadge name="send" className="nb-icon-sm" /></span>
                <span>Send message</span>
              </button>
              <a class="btn btn-outline-secondary rounded-pill" href={c.emailHref}>Email using my mail app</a>
              <div id="contactStatus" class="small text-secondary"></div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
    const form=document.getElementById("contactForm"), statusEl=document.getElementById("contactStatus"), endpointEl=document.getElementById("contactEndpoint");
    form?.addEventListener("submit", async (e)=>{e.preventDefault(); const endpoint=(endpointEl?.value||"").trim();
      if(!endpoint||endpoint.includes("PASTE")){statusEl.textContent="Form is not configured yet."; alert("Contact form is not connected yet. Please use the email button for now."); return;}
      statusEl.textContent="Sending…"; const fd=new FormData(form);
      const payload={source:"nexgenbinary.com",submittedAt:new Date().toISOString(),name:String(fd.get("name")||""),email:String(fd.get("email")||""),phone:String(fd.get("phone")||""),organization:String(fd.get("org")||""),message:String(fd.get("message")||"")};
      try{const res=await fetch(endpoint,{method:"POST",headers:{"Content-Type":"application/json"},body:JSON.stringify(payload)}); if(!res.ok) throw new Error(); form.reset(); statusEl.textContent="Message sent."; alert("Thank you. Your message was sent successfully. Someone will reach out soon.");}
      catch{statusEl.textContent="Unable to send automatically right now."; alert("We could not send the message automatically right now. Please use the 'Email using my mail app' button.");}
    });
  </script>
</section>
