---
import IconBadge from "./IconBadge.astro";
const { site } = Astro.props;
const h = site.hero ?? {};
const what = site.whatWeDo ?? { items: [] };
const kicker = h.kicker ?? h.eyebrow ?? "Reliable IT for Dental Practices Across Virginia";
const title = h.title ?? h.headline ?? "Future-ready systems. Human-ready support.";
const text = h.text ?? h.subheadline ?? "";
const primaryCta = h.primaryCta ?? "Book a Consultation";
const secondaryCta = h.secondaryCta ?? "Call Us";
---
<section id="home" class="nb-hero-wrap">
  <div class="nb-shell nb-hero-grid">
    <div class="nb-hero-copy">
      <div class="nb-pill">{kicker}</div>
      <h1 class="nb-hero-title">{title}</h1>
      <p class="nb-hero-text">{text}</p>
      <div class="nb-btn-row">
        <a href="#contact" class="nb-btn nb-btn-primary nb-pop" data-target="contact">
          <IconBadge name="calendar" class="inline" /><span>{primaryCta}</span>
        </a>
        <a href="#contact" class="nb-btn nb-btn-ghost nb-pop" data-target="contact">
          <IconBadge name="phone" class="inline" /><span>{secondaryCta}</span>
        </a>
      </div>
    </div>
    <div class="nb-hero-panel nb-pop">
      <div class="nb-panel-title">{what.title ?? 'What We Do'}</div>
      <div class="nb-hero-cards">
        {(what.items ?? []).map((item) => (
          <article class="nb-mini-card nb-pop">
            <IconBadge name={item.icon} class="lg" />
            <div>
              <h3>{item.title}</h3>
              <p>{item.text}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
</section>
