---
const { title = "NexGen Binary", description = "Reliable IT for Dental Practices Across Virginia" } = Astro.props;
import "../styles/custom.css";
import "../styles/nav-stability-v17.css";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Favicon / browser tab icon (same company logo source) -->
    <link rel="icon" type="image/svg+xml" href="/Company_logo.svg?v=19" />
    <link rel="icon" type="image/png" href="/Company_logo.png?v=19" />
    <link rel="shortcut icon" href="/Company_logo.png?v=19" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Plus+Jakarta+Sans:wght@600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <slot />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
