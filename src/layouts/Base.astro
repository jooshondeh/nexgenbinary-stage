---
import '../styles/custom.css';
const { title = 'NexGen Binary', site } = Astro.props;
const formEndpoint = site?.contact?.formEndpoint || '';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="NexGen Binary provides dental-focused managed IT, security, cloud, and support services across Virginia." />
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="shortcut icon" href="./favicon.ico?v=46" />
    <link rel="icon" type="image/x-icon" href="./favicon.ico?v=46" />
    <link rel="icon" type="image/png" sizes="32x32" href="./favicon-32x32.png?v=46" />
    <link rel="icon" type="image/png" sizes="16x16" href="./favicon-16x16.png?v=46" />
    <link rel="apple-touch-icon" href="./apple-touch-icon.png?v=46" />
    <link rel="manifest" href="./site.webmanifest?v=46" />
    <meta name="theme-color" content="#0b2f53" />
    <script is:inline>
      if ('scrollRestoration' in history) history.scrollRestoration = 'manual';
      window.addEventListener('load', () => {
        try { window.scrollTo({ top: 0, left: 0, behavior: 'auto' }); } catch { window.scrollTo(0, 0); }
      });
    </script>
  </head>
  <body>
    <slot />
    <script is:inline define:vars={{ formEndpoint }}>
      window.__NEXGEN_FORM_ENDPOINT__ = formEndpoint;
    </script>
  </body>
</html>
