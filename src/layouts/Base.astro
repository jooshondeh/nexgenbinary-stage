---
import "bootstrap/dist/css/bootstrap.min.css";
import "../styles/custom.css";
import "../styles/nav-stability-v17.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "NexGen Binary",
  description = "Reliable IT for Dental Practices Across Virginia",
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=32" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=32" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png?v=32" />
    <meta name="theme-color" content="#0f2f52" />
  </head>
  <body>
    <slot />
    <script is:inline>
      // Always start at the top on hard refresh/reload for this one-page site
      try { history.scrollRestoration = 'manual'; } catch {}
      window.addEventListener('pageshow', () => {
        if (!location.hash) window.scrollTo({ top: 0, left: 0, behavior: 'auto' });
      });
    </script>
  </body>
</html>
