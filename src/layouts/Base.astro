---
const { title = 'NexGen Binary', description = 'Reliable IT for Dental Practices Across Virginia' } = Astro.props;
import '../styles/custom.css';
import 'bootstrap/dist/css/bootstrap.min.css';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/logo_thumb.png?v=32" />
    <link rel="icon" type="image/png" sizes="192x192" href="/logo_thumb_192.png?v=32" />
    <link rel="apple-touch-icon" href="/logo_thumb_192.png?v=32" />
    <script is:inline>
      if ('scrollRestoration' in history) history.scrollRestoration = 'manual';
      window.addEventListener('load', () => { window.scrollTo(0,0); });
    </script>
  </head>
  <body>
    <slot />
    <script type="module">
      import 'bootstrap/dist/js/bootstrap.bundle.min.js';
    </script>
  </body>
</html>
