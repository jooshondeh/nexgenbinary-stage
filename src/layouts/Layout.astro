---
const { title = "NexGen Binary", active = "" } = Astro.props;
const BASE = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <style is:global>
    :root{--bg:#071225;--panel:#0b1d38;--line:rgba(255,255,255,.12);--text:#eef5ff;--muted:#c5d3e6;--blue:#1677ff;--blue2:#0f5fd4;--accent:#85d7ff}
    *{box-sizing:border-box} body{margin:0;font-family:Inter,Segoe UI,Arial,sans-serif;background:radial-gradient(circle at 15% -10%,#143f74,#08162c 45%,#050b15);color:var(--text)}
    a{color:inherit} .container{width:min(1160px,calc(100% - 32px));margin:auto}
    .site-header{position:sticky;top:0;z-index:50;background:rgba(6,16,32,.88);backdrop-filter:blur(8px);border-bottom:1px solid var(--line)}
    .nav-wrap{display:flex;align-items:center;justify-content:space-between;gap:10px;min-height:84px}
    .brand{display:flex;align-items:center;gap:12px;text-decoration:none;min-width:0}
    .brand-logo{display:block;object-fit:contain;background:transparent;flex:0 0 auto}
    .brand-stack{display:flex;flex-direction:column;line-height:1.1;min-width:0}
    .brand-name{font-weight:700;font-size:1.45rem;white-space:nowrap}
    .brand-slogan{font-size:.73rem;color:#a9bfdc;margin-top:3px}
    .menu-btn{display:none;background:rgba(255,255,255,.06);color:#fff;border:1px solid var(--line);border-radius:10px;padding:8px 10px}
    .site-nav{display:flex;align-items:center;gap:8px}
    .site-nav a{padding:7px 9px;border-radius:8px;text-decoration:none;color:#dce8f7;font-size:.92rem}
    .site-nav a:hover,.site-nav a.active{background:rgba(255,255,255,.06);color:#fff}
    .btn{display:inline-flex;align-items:center;gap:8px;padding:10px 13px;border-radius:12px;border:1px solid var(--line);text-decoration:none;font-weight:600;background:rgba(255,255,255,.04)}
    .btn.primary,.nav-cta{background:linear-gradient(180deg,var(--blue),var(--blue2));border-color:rgba(125,198,255,.35);color:#fff}
    .btn.ghost{background:rgba(255,255,255,.04)}
    .hero{padding:34px 0 10px}.hero-grid{display:grid;grid-template-columns:1.15fr .85fr;gap:16px}
    .eyebrow{display:inline-block;border:1px solid rgba(125,198,255,.28);background:rgba(125,198,255,.12);padding:6px 10px;border-radius:999px;color:#9bdcff;font-size:.82rem}
    h1{margin:12px 0 8px;font-size:2rem} h2{margin:0 0 8px} h3{margin:10px 0 8px}
    .lead,.muted{color:var(--muted);line-height:1.55}.small{font-size:.86rem}
    .panel,.card{background:linear-gradient(180deg,rgba(255,255,255,.04),rgba(255,255,255,.02));border:1px solid var(--line);border-radius:18px;padding:16px}
    .grid2{display:grid;grid-template-columns:repeat(2,1fr);gap:14px}.grid3{display:grid;grid-template-columns:repeat(3,1fr);gap:12px}.section-head{margin:22px 0 10px}
    .icon-box{width:46px;height:46px;border-radius:12px;border:1px solid rgba(255,255,255,.14);background:rgba(255,255,255,.03);display:grid;place-items:center;margin-bottom:8px}.icon{color:var(--accent)}
    .inline-row{display:flex;flex-wrap:wrap;gap:8px}.pill-row{display:flex;flex-wrap:wrap;gap:8px;margin-top:10px}.pill-row span{border:1px solid rgba(255,255,255,.12);background:rgba(255,255,255,.03);padding:6px 9px;border-radius:999px;font-size:.82rem}
    .check-list,.bullet-list{margin:8px 0 12px;padding-left:18px;line-height:1.55}
    .plan-card{box-shadow:0 10px 22px rgba(0,0,0,.22)} .plan-head{display:flex;justify-content:space-between;gap:10px;align-items:flex-start} .plan-title{display:flex;gap:10px}
    .toggle-btn{background:rgba(255,255,255,.05);border:1px solid var(--line);color:#fff;border-radius:999px;padding:7px 10px;display:inline-flex;align-items:center;gap:6px;cursor:pointer}
    .toggle-content{display:none}.toggle-content.open{display:block}
    .page{padding:22px 0}.form{display:grid;gap:8px}.form label{display:grid;gap:5px}
    .form input,.form textarea{width:100%;padding:10px 12px;border-radius:10px;border:1px solid var(--line);background:rgba(2,10,20,.6);color:#fff;font:inherit}
    .site-footer{margin-top:26px;border-top:1px solid var(--line);background:rgba(3,10,19,.65)} .footer-grid{display:grid;grid-template-columns:1.2fr .8fr .9fr;gap:14px;padding:16px 0 8px} .footer-brand{display:flex;align-items:center;gap:8px}
    .mobile-cta{display:none;position:fixed;left:10px;right:10px;bottom:10px;background:rgba(4,10,20,.92);border:1px solid var(--line);border-radius:14px;padding:8px;gap:8px;z-index:40}
    .mobile-cta a{flex:1;text-align:center;text-decoration:none;padding:10px 8px;border-radius:10px;border:1px solid var(--line);background:rgba(255,255,255,.04);font-weight:700}
    .mobile-cta a.primary{background:linear-gradient(180deg,var(--blue),var(--blue2));border-color:rgba(125,198,255,.35)}
    @media (max-width:980px){.site-nav{display:none;position:absolute;top:84px;left:16px;right:16px;flex-direction:column;align-items:stretch;background:rgba(6,16,32,.97);border:1px solid var(--line);border-radius:14px;padding:10px}.site-nav.open{display:flex}.menu-btn{display:block}.hero-grid,.grid2,.grid3,.footer-grid{grid-template-columns:1fr}}
    @media (max-width:700px){body{padding-bottom:76px}.mobile-cta{display:flex}.brand-logo{width:48px;height:48px}.brand-name{font-size:1.12rem}.brand-slogan{font-size:.65rem;max-width:190px}}
  </style>
</head>
<body>
<header class="site-header">
  <div class="container nav-wrap">
    <a href={BASE} class="brand">
      <img src={`${BASE}assets/nexgen-logo-transparent.png`} alt="NexGen Binary logo" class="brand-logo" width="56" height="56" />
      <span class="brand-stack">
        <span class="brand-name">NexGen Binary</span>
        <span class="brand-slogan">Future-Ready in Every Bit, Human-Ready in Every Beat</span>
      </span>
    </a>
    <button class="menu-btn" aria-label="Toggle menu" aria-expanded="false"><i class="fa-solid fa-bars"></i></button>
    <nav class="site-nav">
      <a href={BASE} class={active==="home" ? "active" : ""}>Home</a>
      <a href={`${BASE}services`} class={active==="services" ? "active" : ""}>Services</a>
      <a href={`${BASE}consultation`} class={active==="consultation" ? "active" : ""}>Consultation</a>
      <a href={`${BASE}about`} class={active==="about" ? "active" : ""}>About</a>
      <a href={`${BASE}contact`} class={active==="contact" ? "active" : ""}>Contact</a>
      <a href={`${BASE}consultation#book`} class="btn nav-cta"><i class="fa-solid fa-calendar-check"></i> Book a Consult</a>
    </nav>
  </div>
</header>

<slot />

<footer class="site-footer">
  <div class="container footer-grid">
    <div>
      <div class="footer-brand"><img src={`${BASE}assets/nexgen-logo-transparent.png`} alt="" width="34" height="34" /><strong>NexGen Binary</strong></div>
      <p class="muted">Managed IT and co-managed IT support for dental and healthcare offices in Virginia.</p>
    </div>
    <div><h3>Service Areas</h3><ul><li><a href={`${BASE}service-area-richmond`}>Richmond</a></li><li><a href={`${BASE}service-area-henrico`}>Henrico</a></li><li><a href={`${BASE}service-area-chesterfield`}>Chesterfield</a></li></ul></div>
    <div><h3>Quick Links</h3><ul><li><a href={`${BASE}services`}>Services</a></li><li><a href={`${BASE}contact`}>Contact</a></li></ul></div>
  </div>
  <div class="container" style="padding:10px 0;border-top:1px solid rgba(255,255,255,.08)">Â© <span id="year"></span> NexGen Binary</div>
</footer>

<div class="mobile-cta">
  <a href="tel:+18040000000"><i class="fa-solid fa-phone"></i> Call</a>
  <a href={`${BASE}consultation#book`} class="primary"><i class="fa-solid fa-calendar-check"></i> Book</a>
  <a href={`${BASE}contact`}><i class="fa-solid fa-paper-plane"></i> Message</a>
</div>

<script is:inline>
  (() => {
    const nav = document.querySelector('.site-nav');
    const menu = document.querySelector('.menu-btn');
    const y = document.getElementById('year');
    if (y) y.textContent = new Date().getFullYear();
    if (menu && nav) menu.addEventListener('click', () => nav.classList.toggle('open'));
    document.querySelectorAll('.toggle-btn').forEach(btn => btn.addEventListener('click', () => {
      const panel = btn.closest('.plan-card')?.querySelector('.toggle-content');
      if (panel) panel.classList.toggle('open');
    }));
  })();
</script>
</body>
</html>
