---
const { title = "NexGen Binary", description = "Managed IT and co-managed IT support for Virginia offices.", active = "", includeFaqSchema = false } = Astro.props;
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="theme-color" content="#08162c" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <link rel="stylesheet" href="/styles.css">
  <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    window.gtag = gtag;
    gtag('js', new Date());
    gtag('config', 'G-XXXXXXXXXX');
  </script>
  <script type="application/ld+json" is:inline set:html={JSON.stringify({
    "@context":"https://schema.org","@type":"LocalBusiness","name":"NexGen Binary","image":"/assets/nexgen-logo-transparent.png",
    "url":"https://example.com/","telephone":"+18040000000","sameAs":["https://www.google.com/maps?cid=REPLACE_WITH_YOUR_GBP_ID"]
  })} />
  {includeFaqSchema && <script type="application/ld+json" is:inline set:html={JSON.stringify({"@context":"https://schema.org","@type":"FAQPage","mainEntity":[{"@type":"Question","name":"Do you support dental and healthcare offices?","acceptedAnswer":{"@type":"Answer","text":"Yes."}}]})} />}
</head>
<body>
<header class="site-header">
  <div class="container nav-wrap">
    <a href="/" class="brand">
      <img src="/assets/nexgen-logo-transparent.png" alt="NexGen Binary logo" class="brand-logo" width="56" height="56">
      <span class="brand-stack">
        <span class="brand-name">NexGen Binary</span>
        <span class="brand-slogan">Future-Ready in Every Bit, Human-Ready in Every Beat</span>
      </span>
    </a>
    <button class="menu-btn" aria-label="Toggle menu" aria-expanded="false"><i class="fa-solid fa-bars"></i></button>
    <nav class="site-nav">
      <a href="/" class={active==="home" ? "active" : ""}>Home</a>
      <a href="/services" class={active==="services" ? "active" : ""}>Services</a>
      <a href="/consultation" class={active==="consultation" ? "active" : ""}>Consultation</a>
      <a href="/about" class={active==="about" ? "active" : ""}>About</a>
      <a href="/contact" class={active==="contact" ? "active" : ""}>Contact</a>
      <a href="/service-area-richmond" class={active==="areas" ? "active" : ""}>Service Areas</a>
      <a href="/consultation#book" class="btn nav-cta track" data-event="cta_click" data-label="nav_book"><i class="fa-solid fa-calendar-check"></i> Book a Consult</a>
    </nav>
  </div>
</header>

<slot />

<footer class="site-footer">
  <div class="container footer-grid">
    <div>
      <div class="footer-brand"><img src="/assets/nexgen-logo-transparent.png" width="34" height="34" alt=""><strong>NexGen Binary</strong></div>
      <p class="muted">Managed IT and co-managed IT support for dental and healthcare offices in Virginia.</p>
      <div class="inline-row">
        <a href="tel:+18040000000" class="btn ghost"><i class="fa-solid fa-phone"></i> (804) 000-0000</a>
        <a href="https://www.google.com/maps?cid=REPLACE_WITH_YOUR_GBP_ID" target="_blank" rel="noopener" class="btn ghost"><i class="fa-brands fa-google"></i> Google Business Profile</a>
      </div>
    </div>
    <div>
      <h4>Service Areas</h4>
      <ul class="plain-list">
        <li><a href="/service-area-richmond">Richmond</a></li>
        <li><a href="/service-area-henrico">Henrico</a></li>
        <li><a href="/service-area-chesterfield">Chesterfield</a></li>
      </ul>
    </div>
    <div>
      <h4>Quick Links</h4>
      <ul class="plain-list">
        <li><a href="/services">Services</a></li><li><a href="/consultation">Consultation</a></li>
        <li><a href="/contact">Contact</a></li><li><a href="/privacy">Privacy</a></li>
      </ul>
    </div>
  </div>
  <div class="container footer-bottom">Â© <span id="year"></span> NexGen Binary</div>
</footer>

<div class="mobile-cta">
  <a href="tel:+18040000000" class="track" data-event="call_click" data-label="mobile_call"><i class="fa-solid fa-phone"></i> Call</a>
  <a href="/consultation#book" class="track primary" data-event="cta_click" data-label="mobile_book"><i class="fa-solid fa-calendar-check"></i> Book</a>
  <a href="/contact" class="track" data-event="cta_click" data-label="mobile_msg"><i class="fa-solid fa-paper-plane"></i> Message</a>
</div>
<script is:inline src="/script.js"></script>
<div class="mobile-cta">
  <a href="tel:+18040000000" class="track" data-event="call_click" data-label="mobile_call"><i class="fa-solid fa-phone"></i> Call</a>
  <a href="/consultation#book" class="track primary" data-event="cta_click" data-label="mobile_book"><i class="fa-solid fa-calendar-check"></i> Book</a>
  <a href="/contact" class="track" data-event="cta_click" data-label="mobile_msg"><i class="fa-solid fa-paper-plane"></i> Message</a>
</div>
<script is:inline src="/script.js"></script>
</body>
</html>
