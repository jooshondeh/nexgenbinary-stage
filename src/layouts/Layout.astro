---
const { title = "NexGen Binary", active = "" } = Astro.props;
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
<header class="site-header">
  <div class="container nav-wrap">
    <a href="/" class="brand">
      <img src="/assets/nexgen-logo-transparent.png" alt="NexGen Binary logo" class="brand-logo" width="56" height="56" />
      <span class="brand-stack">
        <span class="brand-name">NexGen Binary</span>
        <span class="brand-slogan">Future-Ready in Every Bit, Human-Ready in Every Beat</span>
      </span>
    </a>
    <button class="menu-btn" aria-label="Toggle menu" aria-expanded="false"><i class="fa-solid fa-bars"></i></button>
    <nav class="site-nav">
      <a href="/" class={active==="home" ? "active" : ""}>Home</a>
      <a href="/services" class={active==="services" ? "active" : ""}>Services</a>
      <a href="/consultation" class={active==="consultation" ? "active" : ""}>Consultation</a>
      <a href="/about" class={active==="about" ? "active" : ""}>About</a>
      <a href="/contact" class={active==="contact" ? "active" : ""}>Contact</a>
      <a href="/consultation#book" class="btn nav-cta"><i class="fa-solid fa-calendar-check"></i> Book a Consult</a>
    </nav>
  </div>
</header>

<slot />

<footer class="site-footer">
  <div class="container footer-grid">
    <div>
      <div class="footer-brand"><img src="/assets/nexgen-logo-transparent.png" alt="" width="34" height="34" /><strong>NexGen Binary</strong></div>
      <p class="muted">Managed IT and co-managed IT support for dental and healthcare offices in Virginia.</p>
    </div>
    <div><h3>Service Areas</h3><ul><li>Richmond</li><li>Henrico</li><li>Chesterfield</li></ul></div>
    <div><h3>Quick Links</h3><ul><li><a href="/services">Services</a></li><li><a href="/contact">Contact</a></li></ul></div>
  </div>
  <div class="container" style="padding:10px 0;border-top:1px solid rgba(255,255,255,.08)">Â© <span id="year"></span> NexGen Binary</div>
</footer>

<div class="mobile-cta">
  <a href="tel:+18040000000"><i class="fa-solid fa-phone"></i> Call</a>
  <a href="/consultation#book" class="primary"><i class="fa-solid fa-calendar-check"></i> Book</a>
  <a href="/contact"><i class="fa-solid fa-paper-plane"></i> Message</a>
</div>

<script is:inline src="/script.js"></script>
</body>
</html>
