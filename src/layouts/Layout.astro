---
const {
  title = "NexGen Binary",
  description = "Managed IT and co-managed IT support for Virginia dental and healthcare offices.",
  active = "",
  includeFaqSchema = false
} = Astro.props;
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="theme-color" content="#08162c" />
  <link rel="preconnect" href="https://cdnjs.cloudflare.com">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <link rel="stylesheet" href="/styles.css" />

  <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX`}></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    window.gtag = gtag;
    gtag('js', new Date());
    gtag('config', 'G-XXXXXXXXXX');
  </script>

  <script type="application/ld+json" is:inline set:html={JSON.stringify({
    "@context":"https://schema.org",
    "@type":"LocalBusiness",
    "name":"NexGen Binary",
    "image":"/assets/nexgen-logo-transparent.png",
    "url":"https://example.com/",
    "telephone":"+18040000000",
    "areaServed":["Richmond, VA","Henrico, VA","Chesterfield, VA","Midlothian, VA","Mechanicsville, VA","Glen Allen, VA","Short Pump, VA"],
    "sameAs":["https://www.google.com/maps?cid=REPLACE_WITH_YOUR_GBP_ID"],
    "address":{"@type":"PostalAddress","addressLocality":"Richmond","addressRegion":"VA","addressCountry":"US"}
  })} />

  {includeFaqSchema && (
    <script type="application/ld+json" is:inline set:html={JSON.stringify({
      "@context":"https://schema.org",
      "@type":"FAQPage",
      "mainEntity":[
        {"@type":"Question","name":"Do you support dental and healthcare offices?","acceptedAnswer":{"@type":"Answer","text":"Yes. NexGen Binary supports dental and healthcare offices in Virginia with managed IT and co-managed IT support."}},
        {"@type":"Question","name":"Do you offer onsite support?","acceptedAnswer":{"@type":"Answer","text":"Yes. Remote support is used for fast triage, and onsite support is available based on issue type and plan coverage."}},
        {"@type":"Question","name":"Can you work with our internal IT staff?","acceptedAnswer":{"@type":"Answer","text":"Yes. The Co-Managed IT service model is designed to support internal IT teams."}}
      ]
    })} />
  )}
</head>
<body>
<header class="site-header">
  <div class="container nav-wrap">
    <a href="/" class="brand" aria-label="NexGen Binary home">
      <img src="/assets/nexgen-logo-transparent.png" alt="NexGen Binary logo" class="brand-logo" width="56" height="56">
      <span class="brand-stack">
        <span class="brand-name">NexGen Binary</span>
        <span class="brand-slogan">Future-Ready in Every Bit, Human-Ready in Every Beat</span>
      </span>
    </a>

    <button class="menu-btn" aria-label="Toggle menu" aria-expanded="false"><i class="fa-solid fa-bars"></i></button>

    <nav class="site-nav">
      <a href="/" class={active === "home" ? "active" : ""}>Home</a>
      <a href="/services" class={active === "services" ? "active" : ""}>Services</a>
      <a href="/consultation" class={active === "consultation" ? "active" : ""}>Consultation</a>
      <a href="/about" class={active === "about" ? "active" : ""}>About</a>
      <a href="/contact" class={active === "contact" ? "active" : ""}>Contact</a>
      <a href="/service-area-richmond" class={active === "areas" ? "active" : ""}>Service Areas</a>
      <a href="/consultation#book" class="btn nav-cta track" data-event="cta_click" data-label="nav_book_consult">
        <i class="fa-solid fa-calendar-check"></i> Book a Consult
      </a>
    </nav>
  </div>
</header>

<slot />

<footer class="site-footer">
  <div class="container footer-grid">
    <div>
      <div class="footer-brand">
        <img src="/assets/nexgen-logo-transparent.png" alt="" class="footer-logo" width="34" height="34">
        <strong>NexGen Binary</strong>
      </div>
      <p class="muted">Managed IT and co-managed IT support for dental and healthcare offices in Virginia.</p>
      <p class="muted small">Service areas: Richmond, Henrico, Chesterfield, Midlothian, Mechanicsville, Glen Allen, and Short Pump.</p>
      <div class="inline-row">
        <a href="tel:+18040000000" class="btn ghost track" data-event="call_click" data-label="footer_call">
          <i class="fa-solid fa-phone"></i> (804) 000-0000
        </a>
        <a href="https://www.google.com/maps?cid=REPLACE_WITH_YOUR_GBP_ID" target="_blank" rel="noopener" class="btn ghost track" data-event="gbp_click" data-label="footer_gbp">
          <i class="fa-brands fa-google"></i> Google Business Profile
        </a>
      </div>
    </div>

    <div>
      <h4>Hours</h4>
      <ul class="plain-list">
        <li>Mon–Fri: 8:00 AM – 6:00 PM</li>
        <li>Remote support: Business hours</li>
        <li>Onsite support: Scheduled / priority</li>
      </ul>
      <h4>Service Area Pages</h4>
      <ul class="plain-list">
        <li><a href="/service-area-richmond">Richmond</a></li>
        <li><a href="/service-area-henrico">Henrico</a></li>
        <li><a href="/service-area-chesterfield">Chesterfield</a></li>
      </ul>
    </div>

    <div>
      <h4>Quick Links</h4>
      <ul class="plain-list">
        <li><a href="/services">Services</a></li>
        <li><a href="/consultation">Book Consultation</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/privacy">Privacy</a></li>
        <li><a href="/thank-you">Confirmation</a></li>
      </ul>
      <div class="pill-row">
        <span><i class="fa-brands fa-microsoft"></i> M365</span>
        <span><i class="fa-solid fa-shield-halved"></i> Security-First</span>
        <span><i class="fa-solid fa-location-dot"></i> Virginia-Based</span>
        <span><i class="fa-solid fa-tooth"></i> Dental Focus</span>
      </div>
    </div>
  </div>
  <div class="container footer-bottom">© <span id="year"></span> NexGen Binary</div>
</footer>

<div class="mobile-cta">
  <a href="tel:+18040000000" class="track" data-event="call_click" data-label="mobile_call"><i class="fa-solid fa-phone"></i> Call</a>
  <a href="/consultation#book" class="track primary" data-event="cta_click" data-label="mobile_book"><i class="fa-solid fa-calendar-check"></i> Book</a>
  <a href="/contact" class="track" data-event="cta_click" data-label="mobile_message"><i class="fa-solid fa-paper-plane"></i> Message</a>
</div>

<script src="/script.js"></script>
</body>
</html>
